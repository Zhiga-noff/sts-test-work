{
  "include": [
    "./src/**/*"
  ],
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "jsx": "react-jsx",
    "baseUrl": "src",
    // указываем корневую папку
    "paths": {
      "components/*": [
        "components/*"
      ],
      "assets/*": [
        "assets/*"
      ],
      "shared/*": [
        "shared/*"
      ],
      "app/*": [
        "app/*"
      ]
    }
  }
}
